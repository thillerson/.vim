set autowrite
set nocursorline
set nowritebackup
set whichwrap+=<,>,h,l,[,] " Wrap arrow keys between lines

autocmd! bufwritepost .vimrc source ~/.vimrc
noremap! jj <ESC>
inoremap jj <ESC> 

" gui settings
if (&t_Co == 256 || has('gui_running'))
  set background=dark
  if ($TERM_PROGRAM == 'iTerm.app')
    colorscheme solarized
  else
    colorscheme solarized
  endif
endif
